<form asp-action="SendMessage">
    <div class="form-group">
        <label>Тема</label>
        <input class="form-control" name="subject">
    </div>
    <div class="form-group">
        <label>Message</label>
        <textarea class="form-control" name="htmlMessage" rows="5"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Send</button>
</form>